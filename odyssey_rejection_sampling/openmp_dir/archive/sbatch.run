#!/bin/bash
#SBATCH -J omp_pi
#SBATCH -p seas_iacs
#SBATCH -t 0-00:30
#SBATCH -N 1
#SBATCH -c 2
#SBATCH --mem=4000

# Set up environment
source new-modules.sh
module load gcc

# Run program
export OMP_NUM_THREADS=$SLURM_CPUS_PER_TASK
srun -c $SLURM_CPUS_PER_TASK ./omp_pi.x 10000000 $SLURM_CPUS_PER_TASK
